<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/forInfo"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:id="@+id/like"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ticker"
            android:background="#FFFFFF"
            android:src="@drawable/ic_favourite" />

        <androidx.cardview.widget.CardView


            android:id="@+id/image_logo"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="25sp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ticker"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image_logo"
            android:text="ticker"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/image_logo"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/image_logo"
            android:text="name"
            android:textColor="#696969"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="sum"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@+id/sum"
            android:layout_alignEnd="@+id/sum"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:text="percent"
            android:textColor="#696969"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>